{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "google.maps"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "skipDefaultLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules/@react-google-maps/api/src/**/*.stories.tsx",
    "node_modules/@react-google-maps/api/src/**/*.stories.ts",
    "node_modules/@storybook",
    "**/*.stories.*",
    "**/*.test.*"
  ]
}
